<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
        <item name="android:textColor">@color/navi_item_color</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
    </style>

    <style name="NormalTitleText">
        <item name="android:textSize">@dimen/abc_text_size_body_2_material</item>
        <item name="android:textColor">@color/material_grey_900</item>
    </style>

    <style name="SubTitleText" parent="SubTitleTextBase"/>

    <style name="SubTitleTextBase">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/material_grey_600</item>
    </style>

    <style name="BigTitleText" parent="NormalTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BigSubTitleText" parent="SubTitleText">
        <item name="android:textColor">@color/material_grey_500</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>