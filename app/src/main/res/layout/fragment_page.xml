<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.kimkha.triethocduongpho.app.PageActivity$PlaceholderFragment">

            <ImageView
                android:id="@+id/page_image"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="@dimen/my_min_height"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/page_head_group"
                android:padding="@dimen/my_text_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary">
                <TextView
                    android:id="@+id/page_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:text="Header"
                    android:textSize="@dimen/abc_text_size_headline_material" />
                <TextView
                    android:id="@+id/page_subheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abc_secondary_text_material_dark"
                    android:textSize="@dimen/abc_text_size_caption_material"
                    android:text="Subhead"/>
            </LinearLayout>
            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/page_content"
                android:text="@string/loading"
                android:textSize="@dimen/abc_text_size_body_1_material"
                android:layout_margin="@dimen/my_text_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingMultiplier="1.2"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>